<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/enterIngredientText"
        android:layout_width="395dp"
        android:layout_height="643dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addNewRecipeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Recipe" />

            <TextView
                android:id="@+id/chooseTypeCuisineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Type and Cuisine" />

            <Spinner
                android:id="@+id/recipeTypeSpinner"
                android:layout_width="217dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/recipeCuisineSpinner"
                android:layout_width="217dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/enterNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Name" />

            <EditText
                android:id="@+id/recipeNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Recipe Name"
                android:inputType="textPersonName" />

            <Spinner
                android:id="@+id/selectIngredientSpinner"
                android:layout_width="217dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/ingredientAmountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Amount"
                android:inputType="number|numberDecimal" />

            <TextView
                android:id="@+id/ingredientUnitText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit" />

            <Button
                android:id="@+id/addIngredientBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Ingredient" />

            <TextView
                android:id="@+id/ingredientText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have no ingredient in this reciepe yet." />

            <Button
                android:id="@+id/addRecipeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Recipe" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>